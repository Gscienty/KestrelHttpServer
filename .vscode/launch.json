{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}"
    },
    {
      "name": "Sample: SampleApp",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "Compile: all",
      "program": "${workspaceRoot}/samples/SampleApp/bin/Debug/netcoreapp1.1/SampleApp.dll",
      "args": [],
      "cwd": "${workspaceRoot}/samples/SampleApp",
      "console": "internalConsole",
      "stopAtEntry": false,
      "internalConsoleOptions": "openOnSessionStart",
      "launchBrowser": {
        "enabled": true,
        "args": "${auto-detect-url}",
        "windows": {
          "command": "cmd.exe",
          "args": "/C start ${auto-detect-url}"
        },
        "osx": {
          "command": "open"
        },
        "linux": {
          "command": "xdg-open"
        }
      }
    },
    {
      "name": "Sample: LargeResponseApp",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "Compile: all",
      "program": "${workspaceRoot}/samples/LargeResponseApp/bin/Debug/netcoreapp1.1/LargeResponseApp.dll",
      "args": [],
      "cwd": "${workspaceRoot}/samples/LargeResponseApp",
      "console": "internalConsole",
      "stopAtEntry": false,
      "internalConsoleOptions": "openOnSessionStart",
      "launchBrowser": {
        "enabled": true,
        "args": "${auto-detect-url}",
        "windows": {
          "command": "cmd.exe",
          "args": "/C start ${auto-detect-url}"
        },
        "osx": {
          "command": "open"
        },
        "linux": {
          "command": "xdg-open"
        }
      }
    },
    {
      "name": "Debug CodeGenerator",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "Compile: code generator",
      "program": "${workspaceRoot}/tools/CodeGenerator/bin/Debug/netcoreapp1.1/CodeGenerator.dll",
      "args": [],
      "cwd": "${workspaceRoot}",
      "console": "internalConsole",
      "stopAtEntry": true,
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
