{
  "version": "2.0.0",
  "options": {
    "env": {
      "DOTNET_SKIP_FIRST_TIME_EXPERIENCE": "true"
    }
  },
  "tasks": [
    {
      "taskName": "Restore",
      "command": "dotnet",
      "args": [
        "restore"
      ]
    },
    {
      "taskName": "Compile: all",
      "isBuildCommand": true,
      "command": "dotnet",
      "args": [
        "build",
        "${workspaceRoot}/KestrelHttpServer.sln"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "taskName": "Compile: code generator",
      "command": "dotnet",
      "args": [
        "build",
      ],
      "options": {
        "cwd": "${workspaceRoot}/tools/CodeGenerator/"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "taskName": "Run: code generator",
      "command": "dotnet",
      "args": [
        "run"
      ],
      "options": {
        "cwd": "${workspaceRoot}/tools/CodeGenerator/"
      }
    },
    {
      "taskName": "Run: benchmarks",
      "command": "dotnet",
      "args": [
        "run",
        "-c",
        "Release"
      ],
      "options": {
        "cwd": "${workspaceRoot}/test/Microsoft.AspNetCore.Server.Kestrel.Performance/"
      }
    },
    {
      "taskName": "Test: unit",
      "isTestCommand": true,
      "command": "dotnet",
      "args": [
        "test",
        "-f",
        "netcoreapp1.1"
      ],
      "options": {
        "cwd": "${workspaceRoot}/test/Microsoft.AspNetCore.Server.KestrelTests"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "taskName": "Test: functional",
      "command": "dotnet",
      "args": [
        "test",
        "-f",
        "netcoreapp1.1"
      ],
      "options": {
        "cwd": "${workspaceRoot}/test/Microsoft.AspNetCore.Server.Kestrel.FunctionalTests"
      },
      "problemMatcher": "$msCompile"
    }
  ]
}
